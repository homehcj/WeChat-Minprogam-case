<!--pages/4c/index.wxml-->
<picker id="normal" bindchange="bindChange" value="{{index}}" range="{{array}}">
    <view>
      当前选择：{{array[index]}}
    </view>
</picker>

<picker id="multiSelector" mode="multiSelector" bindchange="bindChange" bindcolumnchange="columnchange" value="{{multiIndex}}" range="{{multiArray}}">
    <view>
      当前选择：{{multiArray[0][multiIndex[0]]}}，{{multiArray[1][multiIndex[1]]}}，{{multiArray[2][multiIndex[2]]}}
    </view>
</picker>

<picker id="time" mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="bindChange">
    <view>
      当前选择: {{time}}
    </view>
</picker>

<picker id="date" mode="date" value="{{date}}" start="2015-09-01" bindchange="bindChange">
    <view>
      当前选择: {{date}}
    </view>
</picker>

<picker id="region" mode="region" bindchange="bindChange" value="{{region}}">
    <view>
      当前选择：{{region[0]}}，{{region[1]}}，{{region[2]}}
    </view>
</picker>